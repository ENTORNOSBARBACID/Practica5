@model IList<Ciclos>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4">Ejemplo Entity Framework</h1>
    <br /><br />
    <h3><a asp-action="Create" class="link-secondary">Nuevo Ciclo</a></h3>
    <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Cursos</th>
                <th>Siglas</th>
                <th>Codigo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ciclos c in Model)
            {
                <tr>
                    <td>@c.Nombre</td>
                    <td>@c.Cursos</td>
                    <td>@c.Siglas</td>
                    <td>@c.Codigo</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Curso" asp-action="Details" asp-route-siglas="@c.Siglas"><i class="bi-eye-fill"></i></a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@c.Siglas"><i class="bi-trash-fill"></i></a>
                        <a class="btn btn-warning" asp-controller="Alumnos" asp-action="Create" asp-route-siglas="@c.Siglas"><i class="bi-person-plus-fill"></i></a>
                        <a class="btn btn-info" asp-controller="Alumnos" asp-action="Index" asp-route-siglas="@c.Siglas"><i class="bi-people-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
